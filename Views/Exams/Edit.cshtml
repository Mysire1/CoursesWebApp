@model CoursesWebApp.Models.Exam
@{
    ViewData["Title"] = "Редагувати екзамен";
    var levels = ViewBag.Levels as IEnumerable<CoursesWebApp.Models.Level> ?? new List<CoursesWebApp.Models.Level>();
}

<h1 class="display-5 mb-4"><i class="fas fa-edit me-2"></i>Редагувати екзамен</h1>

@if (ViewData.ModelState.ErrorCount > 0)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Помилка!</strong>
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="ExamId" />
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Назва (опис)</label>
                        <input asp-for="Description" class="form-control" maxlength="255" placeholder="Напр.: Фінальний екзамен з англійської" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ExamDate" class="form-label">Дата проведення</label>
                        <input asp-for="ExamDate" type="date" class="form-control" required />
                        <span asp-validation-for="ExamDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Мова/Рівень</label>
                        <select asp-for="LevelId" class="form-select" required>
                            <option value="">Оберіть мову і рівень</option>
                            @foreach (var level in levels)
                            {
                                <option value="@level.LevelId">@level.Language.Name - @level.LevelName</option>
                            }
                        </select>
                        <span asp-validation-for="LevelId" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Увага: Для зміни списку студентів перейдіть до сторінки деталей екзамену.
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Зберегти зміни
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Скасувати
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}