@model CoursesWebApp.Models.Exam

@{
    ViewData["Title"] = "Деталі екзамену";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-secondary mb-3">
                <i class="fas fa-arrow-left me-2"></i>Назад до списку
            </a>
            <h1 class="display-5">
                <i class="fas fa-file-alt me-3"></i>Деталі екзамену
            </h1>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Інформація про екзамен</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">ID Екзамену:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.ExamId</span>
                        </dd>

                        <dt class="col-sm-4">Екзамен:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Level.Language.Name @Model.Level.Name EXAM</strong>
                        </dd>

                        <dt class="col-sm-4">Рівень:</dt>
                        <dd class="col-sm-8">@Model.Level.Name</dd>

                        <dt class="col-sm-4">Мова:</dt>
                        <dd class="col-sm-8">@Model.Level.Language.Name</dd>

                        <dt class="col-sm-4">Дата проведення:</dt>
                        <dd class="col-sm-8">
                            <i class="fas fa-calendar me-1"></i>
                            @Model.ExamDate.ToString("dd MMMM yyyy")
                            @if (Model.ExamDate > DateTime.Now)
                            {
                                <span class="badge bg-success ms-2">Заплановано</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary ms-2">Проведено</span>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-4">Опис:</dt>
                            <dd class="col-sm-8">@Model.Description</dd>
                        }

                        <dt class="col-sm-4">Студентів:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark">
                                <i class="fas fa-users me-1"></i>@Model.ExamResults.Count
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Статистика</h5>
                </div>
                <div class="card-body">
                    @if (Model.ExamResults.Any())
                    {
                        var passedCount = Model.ExamResults.Count(er => er.IsPassed);
                        var failedCount = Model.ExamResults.Count - passedCount;
                        var averageGrade = Model.ExamResults.Average(er => er.Grade);
                        var passRate = Model.ExamResults.Count > 0 ? (passedCount * 100.0 / Model.ExamResults.Count) : 0;

                        <dl class="row mb-0">
                            <dt class="col-sm-6">Середній бал:</dt>
                            <dd class="col-sm-6">
                                <span class="badge bg-primary fs-6">@averageGrade.ToString("F1")</span>
                            </dd>

                            <dt class="col-sm-6">Здали:</dt>
                            <dd class="col-sm-6">
                                <span class="badge bg-success fs-6">@passedCount студентів</span>
                            </dd>

                            <dt class="col-sm-6">Не здали:</dt>
                            <dd class="col-sm-6">
                                <span class="badge bg-danger fs-6">@failedCount студентів</span>
                            </dd>

                            <dt class="col-sm-6">Відсоток здачі:</dt>
                            <dd class="col-sm-6">
                                <span class="badge bg-info text-dark fs-6">@passRate.ToString("F1")%</span>
                            </dd>
                        </dl>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Немає результатів для відображення статистики</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Результати зареєстрованих студентів</h5>
                </div>
                <div class="card-body">
                    @if (!Model.ExamResults.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Немає результатів</strong> - На цей екзамен ще немає зареєстрованих студентів.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">ID Студента</th>
                                        <th scope="col">ПІБ Студента</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Телефон</th>
                                        <th scope="col">Оцінка</th>
                                        <th scope="col">Статус</th>
                                        <th scope="col">Дата складання</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var result in Model.ExamResults.OrderByDescending(r => r.Grade))
                                    {
                                        <tr class="@(result.IsPassed ? "table-success" : "table-danger")">
                                            <td>
                                                <span class="badge bg-secondary">@result.StudentId</span>
                                            </td>
                                            <td>
                                                <strong>@result.Student.LastName @result.Student.FirstName</strong>
                                            </td>
                                            <td>
                                                <i class="fas fa-envelope me-1"></i>
                                                <a href="mailto:@result.Student.Email">@result.Student.Email</a>
                                            </td>
                                            <td>
                                                <i class="fas fa-phone me-1"></i>
                                                @(result.Student.Phone ?? "Не вказано")
                                            </td>
                                            <td>
                                                <span class="badge @(result.Grade >= 90 ? "bg-success" : result.Grade >= 75 ? "bg-primary" : result.Grade >= 60 ? "bg-warning text-dark" : "bg-danger") fs-6">
                                                    @result.Grade
                                                </span>
                                            </td>
                                            <td>
                                                @if (result.IsPassed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Здав
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times me-1"></i>Не здав
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <i class="fas fa-calendar me-1"></i>
                                                @result.ExamDate.ToString("dd.MM.yyyy")
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any custom JavaScript here if needed
    </script>
}
