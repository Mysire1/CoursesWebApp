@model dynamic
@{
    ViewData["Title"] = "Профіль користувача";
    Layout = "_Layout";
    
    string role = ViewData["Role"] as string ?? "";
    string fullName = "";
    string email = "";
    DateTime createdAt = DateTime.MinValue;
    DateTime lastLoginAt = DateTime.MinValue;
    bool isActive = false;
    
    CoursesWebApp.Models.Student? student = null;
    CoursesWebApp.Models.Teacher? teacher = null;
    
    if (role == "Student" && Model is CoursesWebApp.Models.Student s)
    {
        student = s;
        fullName = s.FullName;
        email = s.Email;
        createdAt = s.CreatedAt;
        lastLoginAt = s.LastLoginAt;
        isActive = s.IsActive;
    }
    else if (role == "Teacher" && Model is CoursesWebApp.Models.Teacher t)
    {
        teacher = t;
        fullName = t.FullName;
        email = t.Email;
        createdAt = t.HireDate;
        lastLoginAt = t.LastLoginAt;
        isActive = t.IsActive;
    }
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-circle me-2"></i>Профіль користувача
                </h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="text-primary">Основна інформація</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Email:</strong></td>
                                <td>@email</td>
                            </tr>
                            <tr>
                                <td><strong>Повне ім'я:</strong></td>
                                <td>@fullName</td>
                            </tr>
                            <tr>
                                <td><strong>Роль:</strong></td>
                                <td>
                                    @if (role == "Teacher")
                                    {
                                        <span class="badge bg-primary">Викладач</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Студент</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <h5 class="text-primary">Статистика</h5>
                        <table class="table table-borderless">
                            <tr>
                                <td><strong>Дата реєстрації:</strong></td>
                                <td>@createdAt.ToString("dd.MM.yyyy HH:mm")</td>
                            </tr>
                            <tr>
                                <td><strong>Останній вхід:</strong></td>
                                <td>
                                    @if (lastLoginAt != DateTime.MinValue)
                                    {
                                        @lastLoginAt.ToString("dd.MM.yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Ніколи</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Статус:</strong></td>
                                <td>
                                    @if (isActive)
                                    {
                                        <span class="badge bg-success">Активний</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Неактивний</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                @if (student != null)
                {
                    <hr />
                    <h5 class="text-primary">Інформація про студента</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Дата народження:</strong> @student.DateOfBirth.ToString("dd.MM.yyyy")</p>
                            <p><strong>Телефон:</strong> @(string.IsNullOrEmpty(student.Phone) ? "Не вказано" : student.Phone)</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Дата реєстрації на курс:</strong> @student.RegistrationDate.ToString("dd.MM.yyyy")</p>
                            <p><strong>Знижка лояльності:</strong> 
                                @if (student.HasDiscount)
                                {
                                    <span class="badge bg-success">Активна (@student.DiscountPercentage%)</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Неактивна</span>
                                }
                            </p>
                            @if (student.Group != null)
                            {
                                <p><strong>Група:</strong> @student.Group.GroupId</p>
                            }
                        </div>
                    </div>
                }

                @if (teacher != null)
                {
                    <hr />
                    <h5 class="text-primary">Інформація про викладача</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Дата найму:</strong> @teacher.HireDate.ToString("dd.MM.yyyy")</p>
                            <p><strong>Телефон:</strong> @(string.IsNullOrEmpty(teacher.Phone) ? "Не вказано" : teacher.Phone)</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Кількість груп:</strong> @teacher.Groups.Count</p>
                            <p><strong>Кількість мов:</strong> @teacher.TeacherLanguages.Count</p>
                        </div>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>Повернутися на головну
                </a>
            </div>
        </div>
    </div>
</div>