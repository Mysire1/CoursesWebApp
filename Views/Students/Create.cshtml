@model CoursesWebApp.Models.ViewModels.StudentCreateViewModel

@{
    ViewData["Title"] = "Додати студента";
}

<h1>Додати нового студента</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label">Ім'я *</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label">Прізвище *</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="control-label">Дата народження *</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label">Телефон</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <!-- Додаткові поля для зв'язку з ViewModel -->
            <div class="form-group mb-3">
                <label asp-for="GroupId" class="control-label">Група</label>
                <select asp-for="GroupId" class="form-control" asp-items="@(new SelectList(ViewBag.Groups, "GroupId", "GroupName"))">
                    <option value="">- Без групи -</option>
                </select>
                <span asp-validation-for="GroupId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="HasDiscount" class="control-label">Має знижку?</label>
                <input asp-for="HasDiscount" class="form-check-input" type="checkbox" />
                <span asp-validation-for="HasDiscount" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DiscountPercentage" class="control-label">Відсоток знижки</label>
                <input asp-for="DiscountPercentage" class="form-control" type="number" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PaymentStatus" class="control-label">Статус оплати</label>
                <input asp-for="PaymentStatus" class="form-control" />
                <span asp-validation-for="PaymentStatus" class="text-danger"></span>
            </div>
            <!-- пароль приховано -->
            <input asp-for="Password" type="hidden" value="password123" />
            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Повернутися</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Поради для заповнення</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li>Поля, позначені *, є обов'язковими</li>
                    <li>Студент має бути старшим 10 років</li>
                    <li>Email має бути в правильному форматі</li>
                    <li>Дата реєстрації встановлюється автоматично</li>
                    <li>Пароль генерується системно і прихований</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
