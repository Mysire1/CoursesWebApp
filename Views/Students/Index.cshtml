@model IEnumerable<CoursesWebApp.Models.Student>
@{
    ViewData["Title"] = "Студенти";
}

<h1>Список студентів</h1>

<!-- Mini-dashboard та статистика -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Всього студентів</h5>
                <p class="display-6">@Model.Count()</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Сьогодні зареєстровано</h5>
                <p class="display-6">@Model.Count(s => s.RegistrationDate.Date == DateTime.Now.Date)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Пільговиків</h5>
                <p class="display-6">@Model.Count(s => s.HasDiscount)</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <h5 class="card-title">У групах</h5>
                <p class="display-6">@Model.Count(s => s.GroupId != null)</p>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Додати нового студента</a>
</p>

<!-- Список студентів + кнопка для лояльності -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Ім'я</th>
                <th>Прізвище</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Група</th>
                <th>Дата реєстрації</th>
                <th>Знижка</th>
                <th>% Знижки</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.Phone</td>
                    <td>
                        @if (student.Group != null)
                        {
                            <span class="badge bg-primary">@student.Group.GroupName</span>
                        }
                        else
                        {
                            <span class="text-muted">Без групи</span>
                        }
                    </td>
                    <td>@student.RegistrationDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (student.HasDiscount)
                        {
                            <span class="badge bg-success">Так</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ні</span>
                        }
                    </td>
                    <td>
                        @if (student.HasDiscount)
                        {
                            <span class="badge bg-info">@student.DiscountPercentage%</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-info btn-sm">Деталі</a>
                        <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-warning btn-sm">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Студентів не знайдено. <a asp-action="Create" class="alert-link">Додайте першого студента</a>.
    </div>
}