@model IEnumerable<CoursesWebApp.Models.Student>

@{
    ViewData["Title"] = "Студенти";
}

<h1>Список Студентів</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Додати нового студента</a>
    <form asp-action="ApplyLoyaltyDiscount" method="post" style="display: inline-block;">
        <button type="submit" class="btn btn-warning" onclick="return confirm('Ви впевнені, що хочете застосувати знижку за лояльність?')">10% знижка за лояльність</button>
    </form>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Ім'я</th>
                <th>Прізвище</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Дата народження</th>
                <th>Дата реєстрації</th>
                <th>Знижка</th>
                <th>% Знижки</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.Phone</td>
                    <td>@student.DateOfBirth.ToString("dd.MM.yyyy")</td>
                    <td>@student.RegistrationDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (student.HasDiscount)
                        {
                            <span class="badge bg-success">Так</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ні</span>
                        }
                    </td>
                    <td>
                        @if (student.HasDiscount)
                        {
                            <span class="badge bg-info">@student.DiscountPercentage%</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-info btn-sm">Деталі</a>
                        <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-warning btn-sm">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        Студентів не знайдено. <a asp-action="Create" class="alert-link">Додайте першого студента</a>.
    </div>
}