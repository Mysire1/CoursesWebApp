@model CoursesWebApp.Models.ViewModels.StudentEditViewModel

@{
    ViewData["Title"] = "Редагування студента";
    var groups = ViewBag.Groups as IEnumerable<CoursesWebApp.Models.Group> ?? new List<CoursesWebApp.Models.Group>();
}

<h1>Редагування студента</h1>

<div class="row">
    <div class="col-md-6" style="max-height:85vh; overflow-y:auto; padding-bottom:120px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="control-label">Ім'я *</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label">Прізвище *</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="control-label">Дата народження *</label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Phone" class="control-label">Телефон</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="GroupId" class="control-label">Група</label>
                <select asp-for="GroupId" class="form-select" asp-items="@(new SelectList(groups, "GroupId", "GroupName"))">
                    <option value="">Без групи</option>
                </select>
                <small class="text-muted">Оберіть групу або залиште "Без групи", щоб прибрати</small>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Статус</label>
                <select asp-for="Status" class="form-select">
                    <option value="">Не встановлено</option>
                    <option value="Сплачено">Сплачено</option>
                    <option value="Відтермінування">Відтермінування</option>
                    <option value="Борг">Борг</option>
                </select>
                <small class="text-muted">Статус оплати студента</small>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="HasDiscount" class="form-check-input" id="HasDiscount" />
                    <label asp-for="HasDiscount" class="form-check-label">Має знижку</label>
                </div>
            </div>
            <div class="form-group mb-3" id="discountPercentageGroup" style="display: @(Model.HasDiscount ? "block" : "none")">
                <label asp-for="DiscountPercentage" class="control-label">Відсоток знижки (%)</label>
                <input asp-for="DiscountPercentage" class="form-control" type="number" min="0" max="100" step="0.01" />
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>
            <div class="form-group mt-4" style="position:sticky;bottom:0;z-index:10;background-color:#fff;padding-bottom:12px;">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-secondary">Повернутися</a>
                <a asp-action="Index" class="btn btn-outline-secondary">До списку</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Інформація про студента</h5>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> @Model.StudentId</p>
                <div class="alert alert-info mt-3">
                    <h6>Поради:</h6>
                    <ul class="mb-0">
                        <li>Поля з * є обов'язковими</li>
                        <li>Дата реєстрації не змінюється</li>
                        <li>Знижка від 0% до 100%</li>
                        <li>Email має бути в правильному форматі</li>
                        <li>Статус відображає поточний стан оплати</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            function toggleDiscount() {
                if ($('#HasDiscount').is(':checked')) {
                    $('#discountPercentageGroup').slideDown(300);
                } else {
                    $('#discountPercentageGroup').slideUp(300);
                    $('#DiscountPercentage').val('0');
                }
            }
            toggleDiscount();
            $('#HasDiscount').change(toggleDiscount);
        });
    </script>
}