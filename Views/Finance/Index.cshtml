        function applySmallGroupSurcharge() {
            // confirm видалено
            fetch('/Finance/ApplySmallGroupSurcharge', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    loadPaymentStatus();
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Помилка при застосуванні надбавки');
            });
        }

