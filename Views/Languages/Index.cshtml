@using CoursesWebApp.Services
@{
    ViewData["Title"] = "Мови";
    var filter = ViewBag.Filter as string ?? "";
    var languagesWithCount = ViewBag.LanguagesWithCount as IEnumerable<LanguageWithGroupCount> ?? new List<LanguageWithGroupCount>();
}

<h1>Список мов</h1>
<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="filter" class="form-control" placeholder="Введіть назву мови..." value="@filter">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Застосувати</button>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Назва мови</th>
                <th>Кількість груп</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in languagesWithCount) {
                <tr>
                    <td>@item.Language.LanguageId</td>
                    <td>@item.Language.Name</td>
                    <td>@item.GroupCount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@if (!languagesWithCount.Any()) {
    <div class="alert alert-info" role="alert">
        Мов не знайдено.
    </div>
}
