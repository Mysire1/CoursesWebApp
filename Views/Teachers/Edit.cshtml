@model CoursesWebApp.Models.Teacher

@{
    ViewData["Title"] = "Редагувати викладача";
    var allLanguages = ViewBag.AllLanguages as IEnumerable<CoursesWebApp.Models.Language> ?? new List<CoursesWebApp.Models.Language>();
    var selectedLanguageIds = ViewBag.SelectedLanguageIds as List<int> ?? new List<int>();
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Редагувати викладача</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.TeacherId)
                        @Html.HiddenFor(m => m.PasswordHash)
                        @Html.HiddenFor(m => m.HireDate)
                        @Html.HiddenFor(m => m.LastLoginAt)

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">Ім’я</label>
                            <input asp-for="FirstName" class="form-control" required />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Прізвище</label>
                            <input asp-for="LastName" class="form-control" required />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Телефон</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Активний</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Мови, які викладає</label>
                            <div class="border rounded p-3 bg-light">
                                @if (allLanguages.Any())
                                {
                                    @foreach (var language in allLanguages)
                                    {
                                        var isChecked = selectedLanguageIds.Contains(language.LanguageId);
                                        <div class="form-check">
                                            <input type="checkbox" 
                                                   class="form-check-input" 
                                                   name="selectedLanguageIds" 
                                                   value="@language.LanguageId" 
                                                   id="lang_@language.LanguageId"
                                                   @(isChecked ? "checked" : "") />
                                            <label class="form-check-label" for="lang_@language.LanguageId">
                                                @language.Name
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0">Мови не знайдені</p>
                                }
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">Зберегти</button>
                            <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
