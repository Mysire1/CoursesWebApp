@{
    ViewData["Title"] = "Викладачі";
    var filter = ViewBag.Filter as string ?? "";
    var teachers = ViewBag.Teachers as IEnumerable<CoursesWebApp.Models.Teacher> ?? new List<CoursesWebApp.Models.Teacher>();
}

<h1>Список викладачів</h1>

<form method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="filter" class="form-control" placeholder="ПІБ або email..." value="@filter">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-info">Застосувати</button>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>ПІБ</th>
                <th>Email</th>
                <th>Телефон</th>
                <th>Мов (Count)</th>
                <th>Дата найму</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in teachers)
            {
                <tr>
                    <td>@t.TeacherId</td>
                    <td>@t.FullName</td>
                    <td>@t.Email</td>
                    <td>@t.Phone</td>
                    <td>@(t.TeacherLanguages?.Count() ?? 0)</td>
                    <td>@t.HireDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@t.TeacherId" class="btn btn-warning btn-sm">Редагувати</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!teachers.Any())
{
    <div class="alert alert-info" role="alert">
        Викладачів не знайдено.
    </div>
}
