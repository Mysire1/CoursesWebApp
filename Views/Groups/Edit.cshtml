                document.getElementById('groupStudentsList').innerHTML = 
                    '<p class="text-danger text-center py-3">‚ùå –ü–æ–º–∏–ª–∫–∞ –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–Ω—è</p>';
            }
        }

        // –î–æ–¥–∞—Ç–∏ —Å—Ç—É–¥–µ–Ω—Ç–∞
        document.getElementById('addStudentBtn').addEventListener('click', async () => {
            const studentId = document.getElementById('studentSelect').value;
            
