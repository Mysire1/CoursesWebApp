                alert('–ë—É–¥—å –ª–∞—Å–∫–∞, –æ–±–µ—Ä—ñ—Ç—å —Å—Ç—É–¥–µ–Ω—Ç–∞');
                return;
            }

            try {
                const response = await fetch('/Groups/AddStudentToGroup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ groupId: groupId, studentId: parseInt(studentId) })
                });

                const result = await response.json();
                
                if (result.success) {
                    // –ü–µ—Ä–µ–∑–∞–≤–∞–Ω—Ç–∞–∂–∏—Ç–∏ —Å—Ç–æ—Ä—ñ–Ω–∫—É —â–æ–± –æ–Ω–æ–≤–∏—Ç–∏ —Å–ø–∏—Å–æ–∫ –¥–æ—Å—Ç—É–ø–Ω–∏—Ö —Å—Ç—É–¥–µ–Ω—Ç—ñ–≤
                    alert('‚úÖ ' + result.message);
                    window.location.reload();
                } else {
                    alert('‚ùå ' + result.message);
                }
            } catch (error) {
                console.error('–ü–æ–º–∏–ª–∫–∞:', error);
                alert('‚ùå –ü–æ–º–∏–ª–∫–∞ –¥–æ–¥–∞–≤–∞–Ω–Ω—è —Å—Ç—É–¥–µ–Ω—Ç–∞');
