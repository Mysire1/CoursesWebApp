@{
    ViewData["Title"] = "SQL Console";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            overflow-x: hidden;
        }

        .console-wrapper {
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border: 1px solid #dee2e6;
            overflow: hidden;
            margin-top: 20px;
            max-width: 100%;
        }

        .toolbar {
            display: flex;
            gap: 12px;
            padding: 16px;
            border-bottom: 1px solid #dee2e6;
            flex-wrap: wrap;
            align-items: center;
            background: #f8f9fa;
        }

        .btn-console {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .btn-console-primary {
            background: #0d6efd;
            color: white;
        }

        .btn-console-primary:hover {
            background: #0b5ed7;
        }

        .btn-console-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-console-secondary:hover {
            background: #5c636a;
        }

        #sqlEditor {
            width: 100%;
            min-height: 250px;
            max-height: 400px;
            padding: 16px;
            font-family: 'Courier New', monospace;
            font-size: 14px;
            border: none;
            background: #ffffff;
            color: #13343b;
            resize: vertical;
            outline: none;
            border-bottom: 1px solid #dee2e6;
            box-sizing: border-box;
        }

        .query-templates {
            padding: 16px;
            border-bottom: 1px solid #dee2e6;
            background: #f8f9fa;
        }

        .query-templates h3 {
            font-size: 14px;
            margin-bottom: 12px;
            color: #626c71;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .template-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .template-btn {
            padding: 6px 12px;
            font-size: 13px;
            background: transparent;
            border: 1px solid #dee2e6;
            border-radius: 6px;
            cursor: pointer;
            color: #13343b;
            transition: all 0.2s;
        }

        .template-btn:hover {
            background: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }

        .results-container {
            padding: 16px;
            max-height: 400px;
            overflow: auto;
        }

        .results-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
            flex-wrap: wrap;
            gap: 8px;
        }

        .status-badge {
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-success {
            background: #d1e7dd;
            color: #0f5132;
            border: 1px solid #badbcc;
        }

        .status-error {
            background: #f8d7da;
            color: #842029;
            border: 1px solid #f5c2c7;
        }

        .results-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
            overflow-x: auto;
            display: block;
        }

        .results-table thead,
        .results-table tbody {
            display: table;
            width: 100%;
            table-layout: fixed;
        }

        .results-table th,
        .results-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
            word-wrap: break-word;
        }

        .results-table th {
            background: #e9ecef;
            font-weight: 600;
            color: #13343b;
            position: sticky;
            top: 0;
        }

        .results-table tr:hover {
            background: #f8f9fa;
        }

        .error-message {
            padding: 16px;
            background: #f8d7da;
            border-left: 4px solid #dc3545;
            border-radius: 8px;
            color: #842029;
            font-family: 'Courier New', monospace;
            font-size: 13px;
            white-space: pre-wrap;
            word-break: break-word;
            border: 1px solid #f5c2c7;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #626c71;
        }

        .empty-state-icon {
            font-size: 48px;
            margin-bottom: 12px;
            opacity: 0.3;
        }

        .loader {
            display: none;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        .loading .loader {
            display: inline-block;
        }

        .loading .btn-text {
            display: none;
        }

        @@media (max-width: 768px) {
            .console-wrapper {
                margin-left: -15px;
                margin-right: -15px;
                border-radius: 0;
            }

            #sqlEditor {
                min-height: 200px;
            }

            .results-container {
                max-height: 300px;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid px-3 px-md-4">
        <h1 class="mb-4">üóÑÔ∏è SQL Console</h1>
        
        <div class="console-wrapper">
            <div class="toolbar">
                <button class="btn-console btn-console-primary" id="executeBtn">
                    <span class="btn-text">‚ñ∂ –í–∏–∫–æ–Ω–∞—Ç–∏ –∑–∞–ø–∏—Ç</span>
                    <span class="loader"></span>
                </button>
                <button class="btn-console btn-console-secondary" id="clearBtn">üóëÔ∏è –û—á–∏—Å—Ç–∏—Ç–∏</button>
                <button class="btn-console btn-console-secondary" id="formatBtn">‚ú® –§–æ—Ä–º–∞—Ç—É–≤–∞—Ç–∏</button>
                <button class="btn-console btn-console-secondary" id="exportBtn" style="margin-left: auto;">üíæ –ï–∫—Å–ø–æ—Ä—Ç CSV</button>
            </div>

            <div class="query-templates">
                <h3>–®–≤–∏–¥–∫—ñ –∑–∞–ø–∏—Ç–∏</h3>
                <div class="template-buttons">
                    <button class="template-btn" data-query='SELECT * FROM "Students" LIMIT 10;'>–í—Å—ñ —Å—Ç—É–¥–µ–Ω—Ç–∏</button>
                    <button class="template-btn" data-query='SELECT * FROM "Teachers";'>–í–∏–∫–ª–∞–¥–∞—á—ñ</button>
                    <button class="template-btn" data-query='SELECT * FROM "Languages";'>–ú–æ–≤–∏</button>
                    <button class="template-btn" data-query='SELECT * FROM "Groups" JOIN "Teachers" ON "Groups"."TeacherId" = "Teachers"."TeacherId";'>–ì—Ä—É–ø–∏ –∑ –≤–∏–∫–ª–∞–¥–∞—á–∞–º–∏</button>
                    <button class="template-btn" data-query='SELECT l."Name" as Language, COUNT(s."StudentId") as StudentCount FROM "Languages" l LEFT JOIN "Levels" lv ON l."LanguageId" = lv."LanguageId" LEFT JOIN "Groups" g ON lv."LevelId" = g."LevelId" LEFT JOIN "Students" s ON g."GroupId" = s."GroupId" GROUP BY l."LanguageId", l."Name";'>–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ –º–æ–≤–∞–º</button>
                    <button class="template-btn" data-query='SELECT COUNT(*) as TotalStudents, SUM(CASE WHEN "HasDiscount" = true THEN 1 ELSE 0 END) as WithDiscount FROM "Students";'>–ó–Ω–∏–∂–∫–∏ —Å—Ç—É–¥–µ–Ω—Ç—ñ–≤</button>
                    <button class="template-btn" data-query='SELECT g."GroupName", lang."Name" as Language, t."FullName" as Teacher FROM "Groups" g JOIN "Levels" lv ON g."LevelId" = lv."LevelId" JOIN "Languages" lang ON lv."LanguageId" = lang."LanguageId" JOIN "Teachers" t ON g."TeacherId" = t."TeacherId" WHERE lang."Name" = ''–ê–Ω–≥–ª—ñ–π—Å—å–∫–∞'';'>–ó–∞–ø–∏—Ç 1: –ì—Ä—É–ø–∏ –ø–æ –º–æ–≤—ñ</button>
                    <button class="template-btn" data-query='SELECT s."FirstName", s."LastName", s."Email", er."Grade", e."ExamName", lv."Name" as Level FROM "Students" s JOIN "ExamResults" er ON s."StudentId" = er."StudentId" JOIN "Exams" e ON er."ExamId" = e."ExamId" JOIN "Groups" g ON e."GroupId" = g."GroupId" JOIN "Levels" lv ON g."LevelId" = lv."LevelId" WHERE er."Grade" < 60;'>–ó–∞–ø–∏—Ç 3: –ù–µ –∑–¥–∞–Ω—ñ —ñ—Å–ø–∏—Ç–∏</button>
                    <button class="template-btn" data-query='SELECT t."FullName", COUNT(DISTINCT tl."LanguageId") as LanguageCount FROM "Teachers" t JOIN "TeacherLanguages" tl ON t."TeacherId" = tl."TeacherId" GROUP BY t."TeacherId", t."FullName" ORDER BY LanguageCount;'>–ó–∞–ø–∏—Ç 4: –í–∏–∫–ª–∞–¥–∞—á—ñ –ø–æ –º–æ–≤–∞–º</button>
                    <button class="template-btn" data-query='SELECT s."FirstName", s."LastName", s."Email", s."PaymentStatus", s."HasDiscount", s."DiscountPercentage" FROM "Students" s WHERE s."PaymentStatus" IS NOT NULL ORDER BY s."PaymentStatus";'>–ó–∞–ø–∏—Ç 5: –°—Ç–∞—Ç—É—Å –æ–ø–ª–∞—Ç–∏</button>
                    <button class="template-btn" data-query='SELECT s."FirstName", s."LastName", COUNT(DISTINCT e."EnrollmentId") as LevelsCompleted FROM "Students" s JOIN "Enrollments" e ON s."StudentId" = e."StudentId" GROUP BY s."StudentId", s."FirstName", s."LastName" HAVING COUNT(DISTINCT e."EnrollmentId") > 3;'>–ó–∞–ø–∏—Ç 6: –°–ª—É—Ö–∞—á—ñ –∑ 3+ —Ä—ñ–≤–Ω—è–º–∏</button>
                    <button class="template-btn" data-query='SELECT s."FirstName", s."LastName", s."Email", lang."Name" as Language FROM "Students" s JOIN "Groups" g ON s."GroupId" = g."GroupId" JOIN "Levels" lv ON g."LevelId" = lv."LevelId" JOIN "Languages" lang ON lv."LanguageId" = lang."LanguageId" WHERE lang."Name" = ''–ù—ñ–º–µ—Ü—å–∫–∞'';'>–ó–∞–ø–∏—Ç 7: –ù—ñ–º–µ—Ü—å–∫–∞ –º–æ–≤–∞</button>
                    <button class="template-btn" data-query='SELECT g."GroupName", COUNT(s."StudentId") as StudentCount FROM "Groups" g LEFT JOIN "Students" s ON g."GroupId" = s."GroupId" GROUP BY g."GroupId", g."GroupName" HAVING COUNT(s."StudentId") < 5;'>–ó–∞–ø–∏—Ç 8: –ú–∞–ª—ñ –≥—Ä—É–ø–∏ (&lt;5)</button>
                    <button class="template-btn" data-query='SELECT g."GroupName", COUNT(s."StudentId") as StudentCount FROM "Groups" g LEFT JOIN "Students" s ON g."GroupId" = s."GroupId" GROUP BY g."GroupId", g."GroupName" HAVING COUNT(s."StudentId") = 20;'>–ó–∞–ø–∏—Ç 9: –í–µ–ª–∏–∫—ñ –≥—Ä—É–ø–∏ (=20)</button>
                    <button class="template-btn" data-query='SELECT sch."DayOfWeek", sch."StartTime", sch."EndTime", g."GroupName", c."RoomNumber", t."FullName" as Teacher FROM "Schedules" sch JOIN "Groups" g ON sch."GroupId" = g."GroupId" JOIN "Classrooms" c ON sch."ClassroomId" = c."ClassroomId" JOIN "Teachers" t ON g."TeacherId" = t."TeacherId" WHERE g."GroupName" = ''A1-1'';'>–ó–∞–ø–∏—Ç 10: –†–æ–∑–∫–ª–∞–¥ –≥—Ä—É–ø–∏</button>
                </div>
            </div>

            <div class="editor-container">
                <textarea id="sqlEditor" placeholder="–í–≤–µ–¥—ñ—Ç—å SQL –∑–∞–ø–∏—Ç —Ç—É—Ç...&#x0A;–ù–∞–ø—Ä–∏–∫–ª–∞–¥: SELECT * FROM &quot;Students&quot; WHERE &quot;FullName&quot; LIKE '%–Ü–≤–∞–Ω%';"></textarea>
            </div>

            <div class="results-container" id="resultsContainer">
                <div class="empty-state">
                    <div class="empty-state-icon">üìä</div>
                    <p>–†–µ–∑—É–ª—å—Ç–∞—Ç–∏ –∑–∞–ø–∏—Ç—É –≤—ñ–¥–æ–±—Ä–∞–∂–∞—Ç–∏–º—É—Ç—å—Å—è —Ç—É—Ç</p>
                    <p style="font-size: 13px; margin-top: 8px;">–í–≤–µ–¥—ñ—Ç—å SQL –∑–∞–ø–∏—Ç —Ç–∞ –Ω–∞—Ç–∏—Å–Ω—ñ—Ç—å "–í–∏–∫–æ–Ω–∞—Ç–∏ –∑–∞–ø–∏—Ç" (–∞–±–æ Ctrl+Enter)</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentResults = null;
        let executionTime = 0;

        const sqlEditor = document.getElementById('sqlEditor');
        const executeBtn = document.getElementById('executeBtn');
        const clearBtn = document.getElementById('clearBtn');
        const formatBtn = document.getElementById('formatBtn');
        const exportBtn = document.getElementById('exportBtn');
        const resultsContainer = document.getElementById('resultsContainer');
        const templateButtons = document.querySelectorAll('.template-btn');

        templateButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const query = btn.getAttribute('data-query');
                sqlEditor.value = query;
                sqlEditor.focus();
            });
        });

        clearBtn.addEventListener('click', () => {
            sqlEditor.value = '';
            sqlEditor.focus();
        });

        formatBtn.addEventListener('click', () => {
            const query = sqlEditor.value.trim();
            if (!query) return;

            let formatted = query
                .replace(/\bSELECT\b/gi, '\nSELECT\n  ')
                .replace(/\bFROM\b/gi, '\nFROM\n  ')
                .replace(/\bWHERE\b/gi, '\nWHERE\n  ')
                .replace(/\bJOIN\b/gi, '\nJOIN\n  ')
                .replace(/\bLEFT JOIN\b/gi, '\nLEFT JOIN\n  ')
                .replace(/\bINNER JOIN\b/gi, '\nINNER JOIN\n  ')
                .replace(/\bGROUP BY\b/gi, '\nGROUP BY\n  ')
                .replace(/\bORDER BY\b/gi, '\nORDER BY\n  ')
                .replace(/\bLIMIT\b/gi, '\nLIMIT ')
                .replace(/,\s*/g, ',\n  ')
                .trim();

            sqlEditor.value = formatted;
        });

        executeBtn.addEventListener('click', async () => {
            const query = sqlEditor.value.trim();
            
            if (!query) {
                showError('–ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥—ñ—Ç—å SQL –∑–∞–ø–∏—Ç');
                return;
            }

            executeBtn.classList.add('loading');
            executeBtn.disabled = true;

            const startTime = performance.now();

            try {
                const response = await fetch('@Url.Action("ExecuteQuery", "DatabaseConsole")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ query: query })
                });

                if (!response.ok) {
                    throw new Error('–ü–æ–º–∏–ª–∫–∞ –º–µ—Ä–µ–∂—ñ');
                }

                const result = await response.json();
                executionTime = Math.round(performance.now() - startTime);
                
                if (result.success) {
                    currentResults = result.data;
                    displayResults(result.data, result.rowCount);
                } else {
                    showError(result.error);
                }
            } catch (error) {
                showError(`–ü–æ–º–∏–ª–∫–∞ –≤–∏–∫–æ–Ω–∞–Ω–Ω—è: ${error.message}`);
            } finally {
                executeBtn.classList.remove('loading');
                executeBtn.disabled = false;
            }
        });

        function displayResults(data, rowCount) {
            if (!data || data.length === 0) {
                resultsContainer.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì≠</div>
                        <p>–ó–∞–ø–∏—Ç –≤–∏–∫–æ–Ω–∞–Ω–æ —É—Å–ø—ñ—à–Ω–æ, –∞–ª–µ —Ä–µ–∑—É–ª—å—Ç–∞—Ç—ñ–≤ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ</p>
                    </div>
                `;
                return;
            }

            const columns = Object.keys(data[0]);
            
            let html = `
                <div class="results-header">
                    <div class="results-info">
                        <span class="status-badge status-success">‚úì –£—Å–ø—ñ—à–Ω–æ</span>
                        <span style="margin-left: 12px;">${rowCount} —Ä—è–¥–∫—ñ–≤</span>
                        <span style="margin-left: 12px;">‚ö° ${executionTime}ms</span>
                    </div>
                </div>
                <table class="results-table">
                    <thead>
                        <tr>
                            ${columns.map(col => `<th>${escapeHtml(col)}</th>`).join('')}
                        </tr>
                    </thead>
                    <tbody>
                        ${data.map(row => `
                            <tr>
                                ${columns.map(col => `<td>${escapeHtml(String(row[col] ?? 'NULL'))}</td>`).join('')}
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;

            resultsContainer.innerHTML = html;
        }

        function showError(message) {
            resultsContainer.innerHTML = `
                <div class="results-header">
                    <div class="results-info">
                        <span class="status-badge status-error">‚úó –ü–æ–º–∏–ª–∫–∞</span>
                    </div>
                </div>
                <div class="error-message">${escapeHtml(message)}</div>
            `;
        }

        exportBtn.addEventListener('click', () => {
            if (!currentResults || currentResults.length === 0) {
                alert('–ù–µ–º–∞—î –¥–∞–Ω–∏—Ö –¥–ª—è –µ–∫—Å–ø–æ—Ä—Ç—É');
                return;
            }

            const columns = Object.keys(currentResults[0]);
            let csv = columns.join(',') + '\n';
            
            currentResults.forEach(row => {
                const values = columns.map(col => {
                    const value = row[col] ?? '';
                    return `"${String(value).replace(/"/g, '""')}"`;
                });
                csv += values.join(',') + '\n';
            });

            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `query_results_${Date.now()}.csv`;
            link.click();
        });

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        sqlEditor.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
                e.preventDefault();
                executeBtn.click();
            }
            
            if (e.key === 'Tab') {
                e.preventDefault();
                const start = sqlEditor.selectionStart;
                const end = sqlEditor.selectionEnd;
                sqlEditor.value = sqlEditor.value.substring(0, start) + '  ' + sqlEditor.value.substring(end);
                sqlEditor.selectionStart = sqlEditor.selectionEnd = start + 2;
            }
        });
    </script>
</body>
</html>