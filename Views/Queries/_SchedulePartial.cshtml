@model IEnumerable<CoursesWebApp.Models.Schedule>

@if (Model != null && Model.Any())
{
    <div class="mt-3">
        <h6>Розклад занять (@Model.Count() занять на тиждень):</h6>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-success">
                    <tr>
                        <th>День тижня</th>
                        <th>Час початку</th>
                        <th>Час кінця</th>
                        <th>Аудиторія</th>
                        <th>Група</th>
                        <th>Мова</th>
                        <th>Рівень</th>
                        <th>Викладач</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var schedule in Model)
                    {
                        <tr>
                            <td><strong>@schedule.DayOfWeek</strong></td>
                            <td>
                                <span class="badge bg-info">@schedule.StartTime.ToString(@"hh\:mm")</span>
                            </td>
                            <td>
                                <span class="badge bg-warning">@schedule.EndTime.ToString(@"hh\:mm")</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">Ауд. @schedule.Classroom.RoomNumber</span>
                            </td>
                            <td>@schedule.Group.GroupName</td>
                            <td>@schedule.Group.Level.Language.Name</td>
                            <td>@schedule.Group.Level.Name</td>
                            <td>@schedule.Group.Teacher.FullName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-2">
            <small class="text-muted">
                Розклад відсортовано за днями тижня та часом початку.
            </small>
        </div>
    </div>
}
else
{
    <div class="alert alert-info mt-3">
        Розклад для обраної групи чи викладача не знайдено.
    </div>
}