@model IEnumerable<CoursesWebApp.Models.Student>

@if (Model != null && Model.Any())
{
    <div class="mt-3">
        <h6>Знайдені студенти (@Model.Count()):</h6>
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Повне ім'я</th>
                        <th>Email</th>
                        <th>Телефон</th>
                        <th>Знижка</th>
                        <th>Дата реєстрації</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.StudentId</td>
                            <td><strong>@student.FullName</strong></td>
                            <td>@(student.Email ?? "Немає")</td>
                            <td>@(student.Phone ?? "Немає")</td>
                            <td>
                                @if (student.HasDiscount)
                                {
                                    <span class="badge bg-success">@student.DiscountPercentage%</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Немає</span>
                                }
                            </td>
                            <td>@student.RegistrationDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning mt-3">
        Студентів за вказаними критеріями не знайдено.
    </div>
}